<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="hu.bme.mit.remo.scverif.commands.runtestsforproject"
               disabledIcon="icons/Model_inactive_16x16.png"
               icon="icons/3D_objects_16x16_active.png"
               label="ReMo - Run tests for the project(s) selected"
               style="push"
               tooltip="ReMo - Run tests for the project(s) selected">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <and>
                        	<adapt type="org.eclipse.jdt.core.IJavaProject"></adapt>
                        	<!--
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.eclipse.jdt.core.javanature">
                           </test>
                           <adapt
                                 type="org.eclipse.core.resources.IProject">
                           </adapt>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.yakindu.sct.builder.SCTNature">
                           </test>
                           -->
                        </and>
                     </iterate>
                  </with>
               </and>
            </visibleWhen>
         </command>
         
         <command
               commandId="hu.bme.mit.remo.scverif.commands.sct.copytoprojects"
               disabledIcon="icons/Model_inactive_16x16.png"
               icon="icons/3D_objects_16x16_active.png"
               label="ReMo - Copy the SCT file(s) to the appropriate project(s)"
               style="push"
               tooltip="ReMo - Copy the SCT file(s) to the appropriate project(s)">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <and>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
		                        <test
		                              property="org.eclipse.core.resources.name"
		                              value="*.sct">
		                        </test>                                 
                           </adapt>
                        </and>
                     </iterate>
                  </with>
               </and>
            </visibleWhen>
         </command>         
         
      </menuContribution>      
            
