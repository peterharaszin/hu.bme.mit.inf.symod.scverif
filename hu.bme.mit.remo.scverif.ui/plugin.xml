   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Iterate through SCT model and analyze it"
            id="hu.bme.mit.remo.scverif.commands.sct.analyze"
            name="Analyze SCT file">
      </command>
      <command
            description="(ReMo) Generate code from sgen file"
            id="hu.bme.mit.remo.scverif.commands.sgen.generate"
            name="Generate code based on sgen file">
      </command>
      <command
            description="Start processing ReMo homeworks..."
            id="hu.bme.mit.remo.scverif.commands.startprocessing"
            name="Start processing ReMo homeworks!">
      </command>
      <command
            id="hu.bme.mit.remo.scverif.commands.runtestsforproject"
            name="Run homework tests for the current project (System Modeling)">
      </command>
      <command
            description="Copy SCT files to the appropriate IProjects (based on the filename)"
            id="hu.bme.mit.remo.scverif.commands.sct.copytoprojects"
            name="Copy SCT files to IProjects">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="hu.bme.mit.remo.scverif.ui.handlers.sct.SCTAnalyzeHandler"
            commandId="hu.bme.mit.remo.scverif.commands.sct.analyze">
      </handler>
      <handler
            class="hu.bme.mit.remo.scverif.ui.handlers.sgen.SGenAnalyzerHandler"
            commandId="hu.bme.mit.remo.scverif.commands.sgen.generate">
      </handler>
      <handler
            class="hu.bme.mit.remo.scverif.ui.handlers.StatechartProcessingHandler"
            commandId="hu.bme.mit.remo.scverif.commands.startprocessing">
      </handler>
      <handler
            class="hu.bme.mit.remo.scverif.ui.handlers.RunTestsForProjectHandler"
            commandId="hu.bme.mit.remo.scverif.commands.runtestsforproject">
      </handler>
      <handler
            class="hu.bme.mit.remo.scverif.ui.handlers.sct.SctCopyToIProjects"
            commandId="hu.bme.mit.remo.scverif.commands.sct.copytoprojects">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="hu.bme.mit.remo.scverif.commands.startprocessing"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+L">
      </key>
