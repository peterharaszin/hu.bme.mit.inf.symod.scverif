<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="hu.bme.mit.remo.scverif.commands.sct.analyze"
               disabledIcon="icons/Model_inactive_16x16.png"
               icon="icons/3D_objects_16x16_active.png"
               label="ReMo - Analyze SCT model"
               style="push"
               tooltip="ReMo - Analyze SCT model">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.sct">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>

         <command
               commandId="hu.bme.mit.remo.scverif.commands.sgen.generate"
               disabledIcon="icons/Gear_16x16.png"
               icon="icons/Gear_16x16.png"
               label="ReMo - Generate code from model"
               style="push"
               tooltip="ReMo - Generate code from model">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.sgen">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>      
      
      
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.views.ResourceNavigator">
         <command
               commandId="hu.bme.mit.remo.scverif.commands.sct.analyze"
               disabledIcon="icons/Model_inactive_16x16.png"
               icon="icons/3D_objects_16x16_active.png"
               label="ReMo - Analyze SCT model"
               style="push"
               tooltip="ReMo - Analyze SCT model">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.sct">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>

         <command
               commandId="hu.bme.mit.remo.scverif.commands.sgen.generate"
               disabledIcon="icons/Gear_16x16.png"
               icon="icons/Gear_16x16.png"
               label="ReMo - Generate code from model"
               style="push"
               tooltip="ReMo - Generate code from model">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.sgen">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>      
      
      
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
         <command
               commandId="hu.bme.mit.remo.scverif.commands.sct.analyze"
               disabledIcon="icons/Model_inactive_16x16.png"
               icon="icons/3D_objects_16x16_active.png"
               label="ReMo - Analyze SCT model"
               style="push"
               tooltip="ReMo - Analyze SCT model">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.sct">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         
         <command
               commandId="hu.bme.mit.remo.scverif.commands.sgen.generate"
               disabledIcon="icons/Gear_16x16.png"
               icon="icons/Gear_16x16.png"
               label="ReMo - Generate code from model"
               style="push"
               tooltip="ReMo - Generate code from model">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.sgen">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>         
      </menuContribution>
      
      
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="hu.bme.mit.remo.scverif.toolbars.sct.analyze"
               label="Analyze SCT file (ReMo)">
            <command
                  commandId="hu.bme.mit.remo.scverif.commands.sct.analyze"
                  disabledIcon="icons/Model_inactive_16x16.png"
                  icon="icons/Model_active_16x16.png"
                  label="Analyze command"
                  mnemonic="M"
                  style="push"
                  tooltip="Analyze SCT file (ReMo)">
            </command>
         </toolbar>
         
         <toolbar
               id="hu.bme.mit.remo.scverif.toolbars.sgen.generate"
               label="Generate code (ReMo)">
            <command
                  commandId="hu.bme.mit.remo.scverif.commands.sgen.generate"
                  disabledIcon="icons/Gear_16x16.png"
                  icon="icons/Gear_16x16.png"
                  label="Generate command (ReMo)"
                  mnemonic="G"
                  style="push"
                  tooltip="Generate code (ReMo)">
            </command>
         </toolbar>
         
         <toolbar
               id="hu.bme.mit.remo.scverif.startprocess"
               label="Start processing ReMo homeworks">
            <command
                  commandId="hu.bme.mit.remo.scverif.commands.startprocessing"
                  disabledIcon="icons/Model_inactive_16x16.png"
                  icon="icons/3D_objects_16x16_active.png"
                  label="Start processing ReMo homeworks command"
                  mnemonic="R"
                  style="push"
                  tooltip="Start processing (ReMo)">
            </command>
         </toolbar>         
      </menuContribution>
      
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Iterate through SCT model and analyze it"
            id="hu.bme.mit.remo.scverif.commands.sct.analyze"
            name="Analyze SCT file">
      </command>
      <command
            description="(ReMo) Generate code from sgen file"
            id="hu.bme.mit.remo.scverif.commands.sgen.generate"
            name="Generate code based on sgen file">
      </command>
      <command
            description="Start processing ReMo homeworks..."
            id="hu.bme.mit.remo.scverif.commands.startprocessing"
            name="Start processing ReMo homeworks!">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="hu.bme.mit.remo.scverif.ui.handlers.sct.SCTAnalyzeHandler"
            commandId="hu.bme.mit.remo.scverif.commands.sct.analyze">
      </handler>
      <handler
            class="hu.bme.mit.remo.scverif.ui.handlers.sgen.SGenAnalyzerHandler"
            commandId="hu.bme.mit.remo.scverif.commands.sgen.generate">
      </handler>
      <handler
            class="hu.bme.mit.remo.scverif.ui.handlers.StatechartProcessingHandler"
            commandId="hu.bme.mit.remo.scverif.commands.startprocessing">
      </handler>
   </extension>

</plugin>
